<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Shopping">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/header">


        <EditText
            android:id="@+id/input"
            android:layout_width="282dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="43dp"
            android:layout_marginEnd="85dp"
            android:layout_marginBottom="612dp"
            android:ems="10"
            android:hint="Enter item here"
            android:inputType="text" />

        <ImageView
            android:id="@+id/add"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_marginStart="349dp"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="56dp"
            android:layout_marginBottom="635dp"
            android:src="@drawable/add_item" />
    </RelativeLayout>







    <ListView

        android:layout_width="409dp"
        android:layout_height="511dp"
        android:layout_below="@+id/header"
        android:id="@+id/list_item"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="100dp" >



    </ListView>

    <ImageView
        android:id="@+id/imgrecipe"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="330dp"
        android:layout_marginBottom="12dp"
        app:srcCompat="@drawable/recipe" />

    <ImageView
        android:id="@+id/imgschedule"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="250dp"
        android:layout_marginBottom="12dp"
        app:srcCompat="@drawable/schedule" />

    <ImageView
        android:id="@+id/imghome"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="170dp"
        android:layout_marginBottom="12dp"
        app:srcCompat="@drawable/homepage" />

    <ImageView
        android:id="@+id/imgtimer"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="12dp"
        app:srcCompat="@drawable/stopwatch" />

    <ImageView
        android:id="@+id/imguser"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="12dp"
        app:srcCompat="@drawable/user" />


</RelativeLayout>